@model System.Char[]


<div class="row">

    <div class="col-md-7">
        <div id="secretWord">
            @Html.Partial("_SecretWord", Model)
        </div>

        <div id="form-wrapper" class="col-md-6">
            @using (Ajax.BeginForm("GuessTheLetter", null, new AjaxOptions
    {
        HttpMethod = "Get",
        InsertionMode = InsertionMode.Replace,
        UpdateTargetId = "secretWord"
    }, new { id = "form" }))
            {
                <div class="input-group">
                    <input type="text" name="letter" class="form-control" />
                    <span class="input-group-btn">
                        <input type="submit" class="btn btn-primary" value="Go" />
                    </span>
                </div>
            }
        </div>

        <div class="col-md-6">
            @Html.Action("DisplayTopPlayers")
        </div>
    </div>

    <div class="col-md-5">
        <canvas id="canvasElement" width="500" height="500"></canvas>
    </div>

</div>